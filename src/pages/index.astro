---
const title = "Home";
---
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} >
  <title>Hanna Bingham Photography</title>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
  <style>
    * {
      box-sizing: border-box;
      margin: 0;
      padding: 0;
    }

    body {
      font-family: 'Helvetica Neue', sans-serif;
      background: #000;
      color: white;
    }

    header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: 1rem 1.5rem;
      background: white;
      color: black;
      position: sticky;
      top: 0;
      z-index: 1000;
    }

    .logo {
      font-weight: bold;
      font-size: 1rem;
    }

    nav a {
      color: black;
      text-decoration: none;
      margin-left: 1rem;
      font-size: 1.2rem;
    }

    .gallery-wall {
      column-count: 3;
      column-gap: 1rem;
      padding: 1rem;
    }

    .gallery-wall a {
      display: inline-block;
      width: 100%;
      margin-bottom: 1rem;
      break-inside: avoid;
    }

    .gallery-wall img {
      width: 100%;
      height: auto;
      display: block;
      border-radius: 4px;
      cursor: pointer;
    }

    .modal {
      display: none;
      position: fixed;
      z-index: 100;
      left: 0;
      top: 0;
      width: 100vw;
      height: 100vh;
      background: rgba(0, 0, 0, 0.95);
      justify-content: center;
      align-items: center;
      padding: 1rem;
    }

    .modal img {
      max-width: 100%;
      max-height: 90vh;
    }

    .modal:target {
      display: flex;
    }

    .close {
      position: absolute;
      top: 1rem;
      right: 1.5rem;
      font-size: 2rem;
      color: white;
      text-decoration: none;
    }

    @media (max-width: 900px) {
      .gallery-wall {
        column-count: 2;
      }
    }

    @media (max-width: 600px) {
      .logo {
        font-size: 0.9rem;
      }

      nav a {
        margin-left: 0.6rem;
        font-size: 1rem;
      }

      .gallery-wall {
        column-count: 1;
      }
    }
  </style>
</head>
<body>

  <header>
    <div class="logo">Hanna Bingham Photography</div>
    <nav>
      <a href="#" title="Portfolio"><i class="fas fa-images"></i></a>
      <a href="#" title="About"><i class="fas fa-user"></i></a>
      <a href="#" title="Contact"><i class="fas fa-envelope"></i></a>
    </nav>
  </header>

  <main class="gallery-wall">
    <a href="#img1"><img src="/images/photo1.jpeg" alt="Photo 1"></a>
    <a href="#img2"><img src="/images/photo2.jpeg" alt="Photo 2"></a>
    <a href="#img3"><img src="/images/photo3.jpeg" alt="Photo 3"></a>
    <a href="#img4"><img src="/images/photo4.jpeg" alt="Photo 4"></a>
    <a href="#img5"><img src="/images/photo5.jpeg" alt="Photo 5"></a>
  </main>

  <!-- Modals -->
  <div id="img1" class="modal">
    <a href="#" class="close">&times;</a>
    <img src="photo1.jpeg" alt="Full Photo 1">
  </div>
  <div id="img2" class="modal">
    <a href="#" class="close">&times;</a>
    <img src="photo2.jpeg" alt="Full Photo 2">
  </div>
  <div id="img3" class="modal">
    <a href="#" class="close">&times;</a>
    <img src="photo3.jpeg" alt="Full Photo 3">
  </div>
  <div id="img4" class="modal">
    <a href="#" class="close">&times;</a>
    <img src="photo4.jpeg" alt="Full Photo 4">
  </div>
  <div id="img5" class="modal">
    <a href="#" class="close">&times;</a>
    <img src="photo5.jpeg" alt="Full Photo 5">
  </div>

</body>
</html>

